{
	"env": {
		"browser": true,
		"es2021": true
	},
	"extends": "standard-with-typescript",
	"parserOptions": {
		"ecmaVersion": 2022,
		"project": ["tsconfig.json"],
		"sourceType": "module",
		"ecmaFeatures": {
			"impliedStrict": true
		}
	},
	"rules": {
		"@typescript-eslint/indent": ["error", 4],
		"@typescript-eslint/no-useless-constructor": "off",
		"@typescript-eslint/comma-dangle": "off",
		"import/extensions": [
			"error",
			"ignorePackages",
			{
				"": "never",
				"js": "never",
				"jsx": "never",
				"ts": "never",
				"tsx": "never"
			}
		]
	},
	"ignorePatterns": [
		"webpack.config.cjs",
		"plop-templates/*.js",
		"plopfile*.js"
	]
}